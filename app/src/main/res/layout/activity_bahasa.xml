<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.BahasaActivity">

    <!-- HEADER START -->
    <LinearLayout
        android:id="@+id/ly_header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/main_header">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/bt_back">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:text="Bahasa yang Dikuasai"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold">
        </TextView>

    </LinearLayout>
    <!-- HEADER END -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ly_header"
        android:weightSum="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tambahkan bahasa yang dikuasai selain bahasa Indonesia bila ada :"
                android:textSize="11sp">
            </TextView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="16dp">
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/bhs_inggris"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bahasa Inggris">
                    </androidx.appcompat.widget.SwitchCompat>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/bhs_mandarin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bahasa Mandarin">
                    </androidx.appcompat.widget.SwitchCompat>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/bhs_jepang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bahasa Jepang">
                    </androidx.appcompat.widget.SwitchCompat>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/bhs_korea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bahasa Korea">
                    </androidx.appcompat.widget.SwitchCompat>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/bhs_jerman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bahasa Jerman">
                    </androidx.appcompat.widget.SwitchCompat>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/bhs_rusia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bahasa Rusia">
                    </androidx.appcompat.widget.SwitchCompat>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/bhs_italia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bahasa Italia">
                    </androidx.appcompat.widget.SwitchCompat>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/bhs_hindi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bahasa Hindi">
                    </androidx.appcompat.widget.SwitchCompat>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/bhs_lainnya"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lainnya">
                    </androidx.appcompat.widget.SwitchCompat>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ly_footer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="15dp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/btn_ak1"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/bt_red_round"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buat Kartu AK1"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>