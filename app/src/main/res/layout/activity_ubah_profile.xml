<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.UbahProfileActivity">

    <!-- HEADER START -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/main_header">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/bt_back"
            android:layout_marginStart="16dp"
            android:layout_gravity="center">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubah Data Diri"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center">
        </TextView>
    </LinearLayout>
    <!-- HEADER END -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Nama Lengkap-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Nama Lengkap"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:id="@+id/nama_lengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:hint="Isikan nama lengkap"
                android:textSize="16sp"
                android:maxLength="50"
                android:inputType="textCapWords"
                android:imeOptions="actionDone">
            </EditText>
            <!--Jenis Kelamin-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Jenis Kelamin"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="16dp">

                <Spinner
                    android:id="@+id/jenis_kelamin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></Spinner>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Agama"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="16dp">

                <Spinner
                    android:id="@+id/agama"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></Spinner>
            </LinearLayout>
            <!--Tempat Lahir-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Tempat Lahir"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:id="@+id/tmp_lahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:hint="Isikan tempat lahir"
                android:textSize="16sp"
                android:maxLength="50"
                android:inputType="textCapWords"
                android:imeOptions="actionDone">
            </EditText>
            <!--Tanggal Lahir-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Tanggal Lahir"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <LinearLayout
                android:id="@+id/select_tgl_lahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tgl_lahir"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Format : 2022-12-31"
                    android:textSize="16sp"
                    android:gravity="center_vertical">
                </TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="#999">
                </View>
            </LinearLayout>
            <!--Status Kawin-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Status Kawin"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="16dp">
                <Spinner
                    android:id="@+id/kawin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Spinner>
            </LinearLayout>
            <!--Email-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Email"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:hint="Isikan alamat email"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext">
            </EditText>
            <!--Email-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Alamat"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:id="@+id/alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:hint="Masukkan alamat rumah anda"
                android:textSize="16sp"
                android:inputType="text"
                android:imeOptions="actionNext">
            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Kecamatan"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="16dp">

                <Spinner
                    android:id="@+id/kecamatan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></Spinner>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Desa/Kelurahan"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="16dp">

                <Spinner
                    android:id="@+id/desa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></Spinner>
            </LinearLayout>
            <!--Nomor Telepon-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Nomor Telepon"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:id="@+id/no_telp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:hint="Isikan nomor telepon"
                android:textSize="16sp"
                android:maxLength="14"
                android:inputType="number"
                android:imeOptions="actionDone">
            </EditText>
            <!--Status Kawin-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Jenjang Pendidikan"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="16dp">
                <Spinner
                    android:id="@+id/kd_pendidikan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Spinner>
            </LinearLayout>
            <!--Pendidikan-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Lembaga Pendidikan"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:id="@+id/nama_pendidikan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:hint="Tulis nama lembaga pendidikan"
                android:textSize="16sp"
                android:maxLength="30"
                android:inputType="textCapWords"
                android:imeOptions="actionNext">
            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Jurusan"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:id="@+id/jurusan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:hint="Tulis jurusan yang Anda tempuh"
                android:textSize="16sp"
                android:maxLength="30"
                android:inputType="textCapWords"
                android:imeOptions="actionNext">
            </EditText>
            <!--Tahun Lulus-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Tahun Lulus"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:id="@+id/tahun_lulus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:hint="Tulis tahun lulus Anda"
                android:textSize="16sp"
                android:maxLength="30"
                android:inputType="number"
                android:imeOptions="actionNext">
            </EditText>
            <!--Kata Sandi-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Kata Sandi"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <EditText
                    android:id="@+id/password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:layout_marginLeft="16dp"
                    android:hint="Buat kata sandi"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone">
                </EditText>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginRight="16dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/show_password"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_eye_open">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="* biarkan kosong apabila tidak ingin mengubah kata sandi"
                android:textSize="9sp">
            </TextView>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_simpan"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:text="Simpan"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/bt_yellow_round">
            </androidx.appcompat.widget.AppCompatButton>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical">
                <ProgressBar
                    android:id="@+id/progress_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible">
                </ProgressBar>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>