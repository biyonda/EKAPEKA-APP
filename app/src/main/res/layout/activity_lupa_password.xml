<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LupaPasswordActivity">

    <!-- HEADER START -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/main_header">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/bt_back"
            android:layout_marginStart="16dp"
            android:layout_gravity="center">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lupa Password"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center">
        </TextView>
    </LinearLayout>
    <!-- HEADER END -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="Lengkapi data berikut untuk pengajuan ubah password">
    </TextView>

    <!--NIK-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="N.I.K"
        android:textSize="18sp"
        android:textColor="#000"
        android:textStyle="bold">
    </TextView>
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:hint="Isikan NIK anda"
        android:textSize="16sp"
        android:maxLength="16"
        android:minLines="16"
        android:inputType="number"
        android:imeOptions="actionNext">
    </EditText>

    <!--Tanggal Lahir-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="Tanggal Lahir"
        android:textSize="18sp"
        android:textColor="#000"
        android:textStyle="bold">
    </TextView>
    <LinearLayout
        android:id="@+id/select_tgl_lahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tgl_lahir"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Format : 2022-12-31"
            android:textSize="16sp"
            android:gravity="center_vertical">
        </TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#999">
        </View>
    </LinearLayout>

    <!--Nomor Telepon-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="Nomor Telepon"
        android:textSize="18sp"
        android:textColor="#000"
        android:textStyle="bold">
    </TextView>
    <EditText
        android:id="@+id/no_telp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:hint="Isikan nomor telepon"
        android:textSize="16sp"
        android:maxLength="14"
        android:inputType="number"
        android:imeOptions="actionDone">
    </EditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ajukan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:text="Ajukan"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/bt_red_round">
    </androidx.appcompat.widget.AppCompatButton>



</LinearLayout>